<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="180px"
        >

        <com.example.liyo.testdemo.view.CircleView
            android:id="@+id/cv_test"
            android:layout_width="760px"
            android:layout_height="780px"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80px"
            android:layout_marginTop="40px"
            android:layout_marginBottom="120px"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收缩压"
                android:textSize="40px"
                android:layout_marginRight="20px"
                />

            <TextView
                android:id="@+id/tv_ssy"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="0mmHg"
                android:textSize="40px"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收缩压"
                android:textSize="40px"
                android:layout_marginRight="20px"
                android:layout_marginLeft="40px"/>

            <TextView
                android:id="@+id/tv_szy"
                android:layout_width="200px"
                android:layout_height="wrap_content"
                android:text="0mmHg"
                android:textSize="40px"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:gravity="center"
            >

            <Button
                android:id="@+id/fragment_health_monitor_tv"
                android:layout_width="320px"
                android:layout_height="110px"
                android:textSize="40px"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="82px"
                android:text="开始测量"/>
            <Button
                android:id="@+id/fragment_health_monitor_sd"
                android:layout_width="320px"
                android:layout_height="110px"
                android:textSize="40px"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorPrimary"
                android:text="开始测量"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>